{
    "name": "node-mentoring",
    "version": "1.0.0",
    "description": "",
    "main": "src/index.ts",
    "scripts": {
        "start": "nodemon",
        "task1.1": "nodemon --exec ts-node src/task1/task1.1.ts",
        "task1.2": "nodemon --exec ts-node src/task1/task1.2.ts",
        "task2": "cross-env DB=postgres DB_USER=postgres DB_PASSWORD=1 nodemon --exec ts-node src/task2/task2.ts",
        "sql_init": "psql -h localhost -U postgres -p 5432 -a -q -f src/task2/users.sql",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "pretty": "prettier --write src/**/*.ts"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "cross-env": "7.0.0",
        "csvtojson": "2.0.10",
        "express": "4.17.1",
        "http-errors": "1.7.3",
        "joi": "14.3.1",
        "joi-password-complexity": "3.1.0",
        "nodemon": "1.19.4",
        "pg": "7.17.1",
        "sequelize": "5.21.3",
        "uuid": "3.3.3"
    },
    "devDependencies": {
        "@types/express": "4.17.2",
        "@types/http-errors": "1.6.3",
        "@types/joi": "14.3.4",
        "@types/joi-password-complexity": "3.1.0",
        "@types/node": "12.12.7",
        "@types/uuid": "3.4.6",
        "@typescript-eslint/eslint-plugin": "2.10.0",
        "@typescript-eslint/parser": "2.10.0",
        "eslint": "6.6.0",
        "eslint-config-airbnb-base": "14.0.0",
        "eslint-config-prettier": "6.5.0",
        "eslint-plugin-import": "2.18.2",
        "eslint-plugin-prettier": "3.1.1",
        "husky": "3.1.0",
        "lint-staged": "9.5.0",
        "prettier": "1.19.1",
        "ts-node": "8.4.1",
        "typescript": "3.7.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": "eslint"
    }
}
