{
    "compilerOptions": {
        "baseUrl": "src",
        "module": "commonjs",
        "target": "es2017",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": true,
        "lib": ["es7"]
    },
    "include": ["src"]
}
